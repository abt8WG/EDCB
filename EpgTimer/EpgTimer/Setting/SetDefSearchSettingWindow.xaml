<Window x:Class="EpgTimer.SetDefSearchSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="検索条件" Height="500" Width="770" xmlns:my="clr-namespace:EpgTimer" WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <my:SearchKey Grid.Row="0" x:Name="searchKey" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="12,4,12,12" HorizontalAlignment="Right">
            <Button Name="button_OK" Content="    OK    " Margin="0,0,30,0" Click="button_OK_Click" />
            <Button Name="button_cancel" Content="キャンセル" Click="button_cancel_Click" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
