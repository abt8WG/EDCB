                <CheckBox Content="番組情報をコピー" Height="16" HorizontalAlignment="Left" Margin="18,62,0,0" Name="checkBox_CopyContent" VerticalAlignment="Top" />
                <CheckBox Content="基本情報のみコピーする )" Height="16" HorizontalAlignment="Left" Margin="159,62,0,0" Name="checkBox_CopyContentBasic" VerticalAlignment="Top" />
                <CheckBox Content="番組名をネットで検索" Height="16" HorizontalAlignment="Left" Margin="18,92,0,0" Name="checkBox_SearchTtile"  VerticalAlignment="Top" />
