            <Grid>
                <CheckBox Content="番組名をコピー" Height="16" HorizontalAlignment="Left" Margin="18,14,0,0" Name="checkBox_CopyTitle" VerticalAlignment="Top" />
                <CheckBox Content="記号類を取り除く )" Height="16" HorizontalAlignment="Left" Margin="159,14,0,0" Name="checkBox_CopyTitle_Trim" VerticalAlignment="Top" />
