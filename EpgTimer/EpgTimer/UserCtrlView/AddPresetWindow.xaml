<Window x:Class="EpgTimer.AddPresetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="プリセット名" Height="120" Width="450" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <StackPanel>
        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Name="label1" Content="プリセット名" />
            <TextBox Grid.Column="1" Name="textBox_name" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Name="label_chgMsg" Content="(※設定内容も同時に変更されます)" Margin="0,4" Visibility="Hidden" />
            <Button Name="button_add" Content="追加" Margin="12,4,0,4" Click="button_add_Click" />
            <Button Name="button_cancel" Content="キャンセル" Margin="12,4" Click="button_cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
