<Window x:Class="EpgTimer.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpgTimer"
        mc:Ignorable="d"
        Title="情報ウィンドウ EpgTimer" Height="100" Width="370"
        Topmost="True">
    <Grid>
        <ListBox Name="listBox" ItemsSource="{Binding ReserveList}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Status}" Foreground="{Binding StatusColor}" Width="20"/>
                        <TextBlock Text="{Binding ShortTime}" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding ServiceName}" Width="80" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding EventName}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
