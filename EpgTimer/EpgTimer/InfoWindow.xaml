<local:RestorableWindow x:Class="EpgTimer.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpgTimer"
        mc:Ignorable="d"
        Title="EpgTimer" Height="100" Width="370"
        Topmost="{Binding Path=IsTopMost}" ShowInTaskbar="False" Closing="Window_Closing" WindowStyle="ToolWindow">
    <local:RestorableWindow.Resources>
        <ResourceDictionary>
            <Style x:Key="VisibleHeader" TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Visibility" Value="Visible" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
            </Style>
            <Style x:Key="HiddenHeader" TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Visibility" Value="Collapsed" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UserCtrlView\ReserveListViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </local:RestorableWindow.Resources>
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="最前面に表示" IsCheckable="True" IsChecked="{Binding Path=IsTopMost, Mode=TwoWay}"/>
                <MenuItem Header="消す" Click="MenuItem_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <ListView Name="listView_InfoWindow" ItemsSource="{Binding Path=ReserveList}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Style="{StaticResource DataListViewStyle}" MouseDoubleClick="listView_MouseDoubleClick">
            <ListView.View>
                <GridView x:Name="girdView_InfoWindow" />
            </ListView.View>
        </ListView>
    </Grid>
</local:RestorableWindow>
